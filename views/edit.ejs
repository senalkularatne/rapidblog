<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">

		<div class="field">
			<label>Title</label>
			<!-- Whatever user types in is the value -->
			<input type="text" name="blog[title]" value="<%= blog.title%>">
		</div>	

		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%= blog.image%>">
		</div>		

		<div class="field">
			<label>Body</label>
			<!-- textarea doesn't have a value attribute -->
			<textarea name="blog[body]" placeholder="Let's get creative"> <%= blog.body %> </textarea>
		</div>
		
		<input type="submit" class="ui orange basic button">
	</form>
</div>

<% include ./partials/footer %>



