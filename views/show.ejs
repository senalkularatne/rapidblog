<% include ./partials/header %>

<div class="ui main text container segment">

	<!-- Title of Post (Outer div) -->
	<div class="ui huge header"> <%= blog.title %> </div>
	
	<!-- Image, Date (Inner div) -->
	<div class="ui top attached">

		<div class="item">
			<!-- image -->
			<img class="ui centered rounded image" src="<%= blog.image %>" >

			<!-- Date created-->
			<div class="content">
				<span> <%= blog.dateCreated.toDateString() %> </span>
			</div>

			<!-- Body (Outer div) -->
			<div class="description">
				<p> <%- blog.body %> </p>
			</div>

			<!-- Edit button -->
			<a class="ui blue inverted button" href="/blogs/<%=blog._id%>/edit">Edit</a>

			<form id="deletebtn" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST" >
				<button class="ui red inverted button">Delete</button>
			</form>

		</div>
	</div>
</div>

<!-- Test -->

<% include ./partials/footer %>



